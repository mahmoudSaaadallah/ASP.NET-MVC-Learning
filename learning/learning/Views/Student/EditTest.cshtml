@model Student
<form method="post" action="/Student/EditTest/@Model.Id">
    <div>
    <label for="Name">Student Name</label>
    <input type="text" name="Name" value="@Model.Name"/>
    <span asp-validation-for="Name" class="alert-danger"></span>
    </div>
    <br />
    <div>
    <label for="Address">Address</label>
    <input type="text" name="Address" value="@Model.Address" />
    <span asp-validation-for="Address" class="alert-danger"></span>
    </div>
    <br />
    <div>
    <img src="@Model.Image" alt="There is no image." height="120px" width="140px"/>
    </div>
    <input type="submit" class="btn btn-success" value="Update" action="/student/getall" />
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

